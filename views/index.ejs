<!DOCTYPE HTML>

<html>
	<head>
		<title>Stockr</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="stylesheets/main.css" />
		<noscript><link rel="stylesheet" href="stylesheets/noscript.css" /></noscript>
	</head>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
				<%- include('../partials/header') %>

				<!-- Nav -->
					<nav id="nav">
						<ul>
							<li><a id = "btn_google" class="active" >Google</a></li>
							<li><a id = "btn_twitter">Twitter</a></li>
							<li><a id = "btn_uber">Uber</a></li>
						</ul>
					</nav>

				<!-- Main -->
					<div id="main">
							<section id="google" class="main currently_shown">
								<div class="spotlight">
									<div class="content">
										<header class="major">
											<h2>Google</h2>
										</header>
										<div>
											<canvas id="google_chart" width="400" height="400" style="height: 400px; width: 100%"></canvas>
										</div>
										
									</div>
								</div>
							</section>

							<section id="twitter" class="main" style="display: none;">
								<div class="spotlight">
									<div class="content">
										<header class="major">
											<h2>Twitter</h2>
										</header>
										<div>
											<canvas id="twitter_chart" width="400" height="400" style="height: 400px; width: 100%"></canvas>
										</div>
									</div>
								</div>
							</section>

							<section id="uber" class="main" style="display: none;">
								<div class="spotlight">
									<div class="content">
										<header class="major">
											<h2>Uber</h2>
										</header>
										<div>
											<canvas id="uber_chart" width="400" height="400" style="height: 400px; width: 100%"></canvas>
										</div>
									</div>
								</div>
							</section>
					</div>

	

				<!-- Footer -->
				<%- include('../partials/footer') %>

			</div>

			<script>
				var data = '<%- JSON.stringify(data) %>'         
			 </script>

